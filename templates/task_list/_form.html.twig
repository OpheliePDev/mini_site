{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    
    <fieldset class="form-fieldset">
        {{ form_label(form.name, 'Nom de la liste', {'label_attr': {'class': 'form-label'}}) }}
        
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-input-base text-2xl font-semibold', 
                'placeholder': 'Ex: Courses, Travail, Week-end...'
            }
        }) }}
        
        {{ form_errors(form.name, {'attr': {'class': 'form-error'}}) }}
    </fieldset>
    <button type="submit" class="btn-base btn-primary w-full mt-6">
        {{ button_label|default('Enregistrer') }}
    </button>
{{ form_end(form) }}
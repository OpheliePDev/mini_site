{% extends 'base.html.twig' %}

{% block title %}{{ task_list.name }}{% endblock %}

{% block body %}
<main class="task-list-show">
    <h1 class="page-title">📋 Liste : {{ task_list.name }}</h1>

    {% include 'task_list/_task_list_item.html.twig' with {'task_list': task_list} %}

    <footer class="task-list-footer">
        <a href="{{ path('app_task_list_index') }}" class="btn btn-secondary">⬅️ Retour aux listes</a>
        <a href="{{ path('app_task_new', {'listId': task_list.id}) }}" class="btn btn-primary">➕ Ajouter une tâche</a>
    </footer>
</main>
{% endblock %}
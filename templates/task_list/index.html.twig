{% extends 'base.html.twig' %}

{% block title %}Mes listes de tâches{% endblock %}

{% block body %}
    
    <section class="main-content-wrapper">
        <h1 class="page-title">🗂️ Mes listes de tâches</h1>
        
        <div class="mb-8 text-center"> 
            <a href="{{ path('app_task_list_new') }}" class="btn-base btn-primary">
                ➕ Créer une nouvelle liste
            </a>
        </div>

        {% if task_lists|length > 0 %}
            
            {# Remplacement de la grille par un simple conteneur vertical (space-y-4) #}
            <section class="space-y-4"> 
                {% for task_list in task_lists %}
                    {% include 'task_list/_task_list_item.html.twig' with {'task_list': task_list} %}
                {% endfor %}
            </section>
        {% else %}
            <p class="no-lists">
                Aucune liste créée pour le moment 💤. Commencez par en créer une !
            </p>
        {% endif %}
    </section>
{% endblock %}
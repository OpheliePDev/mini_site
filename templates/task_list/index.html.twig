{% extends 'base.html.twig' %}

{% block title %}Mes listes de tâches{% endblock %}

{% block body %}
<main class="task-lists-container">
    <h1 class="page-title">🗂️ Mes listes de tâches</h1>

    {% if task_lists|length > 0 %}
        {% for task_list in task_lists %}
            {% include 'task_list/_task_list_item.html.twig' with {'task_list': task_list} %}
        {% endfor %}
    {% else %}
        <p class="no-lists">Aucune liste créée pour le moment 💤</p>
    {% endif %}

    <footer class="task-list-footer">
        <a href="{{ path('app_task_list_new') }}" class="btn btn-primary">➕ Créer une nouvelle liste</a>
    </footer>
</main>
{% endblock %}